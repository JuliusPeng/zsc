{
  "appenders":  {
    "application": {
      "type": "console",
      "filename": "./logs/application",
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncludePattern": true,
      "category": "http"
    },
    "err": {
      "type": "stderr",
      "filename": "./logs/errors",
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncludePattern": true
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "err"
    }
  },
  "categories": {
    "default": { "appenders": ["application"], "level": "info" },
    "error": { "appenders": ["errors"], "level": "error" }
  },
  "pm2": true,
  "pm2InstanceVar": "INSTANCE_ID"
}
